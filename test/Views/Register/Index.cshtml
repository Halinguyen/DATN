<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>QLHGX Hali</title>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    <script>
        var username, password, hodem, ten,nhaplai;
        $(document).ready(function () {
            $(document).on('click', '#btnRegister', function () {
                username = $('#inputEmailAddress').val();
                password = $('#inputPassword').val();
                hodem = $('#inputFirstName').val();
                ten = $('#inputLastName').val();
                nhaplai = $('#inputConfirmPassword').val();
                const data = {
                    tendangnhap: $('#inputEmailAddress').val(),
                    matkhau: $('#inputPassword').val()
                }
                if (username.length == 0 || password.length == 0 || hodem.length == 0 || ten.length == 0) {
                    alert('Bạn vui lòng nhập đủ dữ liệu !');
                    return false;
                }
                if (nhaplai != password) {
                    alert('Mật khẩu nhập lại không khớp !');
                    return false;
                }
                else {
                    $.ajax({
                        url: location.pathname + '/Dangky',
                        type: 'POST',
                        data: data,
                    }).done(function (res) {
                        if (res) {
                            window.location.href = "Home/Index";
                        }
                        else {
                            alert('Đăng ký thất bại :(');
                        }
                    });
                }
            });
        });
        
    </script>
</head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Tạo tài khoản</h3></div>
                                    <div class="card-body">
                                        <form>
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="small mb-1" for="inputFirstName">Họ đệm</label>
                                                        <input class="form-control py-4" id="inputFirstName" required type="text" placeholder="Nhập họ đệm" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="small mb-1" for="inputLastName">Tên</label>
                                                        <input class="form-control py-4" id="inputLastName" required type="text" placeholder="Nhập tên" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="inputEmailAddress">Tên đăng nhập</label>
                                                <input class="form-control py-4" id="inputEmailAddress" required type="email" aria-describedby="emailHelp" placeholder="Nhập tên đăng nhập" />
                                            </div>
                                            <div class="form-row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="small mb-1" for="inputPassword">Mật khẩu</label>
                                                        <input class="form-control py-4" id="inputPassword" required type="password" placeholder="Nhập mật khẩu" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="small mb-1" for="inputConfirmPassword">Xác nhận mật khẩu</label>
                                                        <input class="form-control py-4" id="inputConfirmPassword" required type="password" placeholder="Xác nhận mật khẩu" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group mt-4 mb-0">
                                                <input type="submit" class="btn btn-primary btn-block" id="btnRegister" value="Tạo tài khoản"/>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small">
                                        @Html.ActionLink("Đã có tài khoản? Click để đăng nhập","Index","Login")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; DATN Hali 2021</div>
                            <div>
                                <a href="#">Chính sách bảo mật</a>
                                &middot;
                                <a href="#">Điều khoản &amp; Điều kiện</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>
